<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="no.pdigre.chessutil.contribution1">
         <menu
               label="New Submenu"
               path="additions"
               id="no.pdigre.chessutil.menu1">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="New Action"
               class="no.pdigre.chessutil.popup.actions.NewAction"
               menubarPath="no.pdigre.chessutil.menu1/group1"
               enablesFor="1"
               id="no.pdigre.chessutil.newAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Sample Preferences"
            class="no.pdigre.chessutil.preferences.SamplePreferencePage"
            id="no.pdigre.chessutil.preferences.SamplePreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="no.pdigre.chessutil.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            name="Sample Page"
            nameFilter="*.*"
            class="no.pdigre.chessutil.properties.SamplePropertyPage"
            id="no.pdigre.chessutil.properties.samplePropertyPage">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="no.pdigre.chessutil">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="no.pdigre.chessutil"
            class="no.pdigre.chessutil.views.SampleView"
            id="no.pdigre.chessutil.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="no.pdigre.chessutil.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
